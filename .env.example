# ============================================
# AI Financial Coach - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Model Configuration
DEFAULT_MODEL=openai/gpt-4o-mini
BACKUP_MODEL=openai/gpt-3.5-turbo

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=financial_coach
MONGODB_COLLECTION=analyses

# HuggingFace Token (optional)
HUGGINGFACE_TOKEN=

# PaddleOCR Configuration
PADDLEOCR_LANG=en
PADDLEOCR_USE_GPU=False

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,csv

# Data Directories
DATA_DIR=./data
DEMO_STATEMENTS_DIR=./data/demo_statements
PROCESSED_DIR=./data/processed

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Cost Monitoring
ENABLE_COST_TRACKING=True
COST_LOG_FILE=./logs/cost_tracking.json

# Cache Configuration
ENABLE_CACHE=True
CACHE_EXPIRY_HOURS=24
